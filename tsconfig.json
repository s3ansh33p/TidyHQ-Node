{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
        "noEmit": false,
        "strict": true,
        "declaration": true,
        "declarationDir": "types",
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "exclude": ["docs", "node_modules", "post-build.js"],
    "include": ["**/*.js"]
}